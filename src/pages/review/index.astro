---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { marked } from 'marked';
import '../../styles/review.css';

const url = new URL(Astro.request.url);
const currentPage = parseInt(url.searchParams.get('page') || '1');
const itemsPerPage = 20;

const reviewEntries = await getCollection('review');
const sortedEntries = reviewEntries.sort((a, b) => b.data.publishedAt.getTime() - a.data.publishedAt.getTime());

const totalPages = Math.ceil(sortedEntries.length / itemsPerPage);
const startIndex = (currentPage - 1) * itemsPerPage;
const endIndex = startIndex + itemsPerPage;
const currentEntries = sortedEntries.slice(startIndex, endIndex);

const categoryNames = {
  gadget: 'ガジェット',
  book: '本'
};

function renderStars(rating) {
  return '★'.repeat(rating) + '☆'.repeat(5 - rating);
}
---

<Layout title="レビュー - TRPG研究室">
  <h1>レビュー</h1>
  <p>ガジェットや本のレビューを5段階評価で紹介しています。</p>

  <div class="categories">
    <h3>カテゴリで絞り込み</h3>
    <ul>
      <li><a href="/review">すべて</a></li>
      <li><a href="/review/gadget">ガジェット</a></li>
      <li><a href="/review/book">本</a></li>
    </ul>
  </div>

  <div class="review-list">
    {currentEntries.map(entry => (
      <article class="review-item">
        <h2>
          <a href={`/review/${entry.slug}`}>{entry.data.title}</a>
        </h2>
        <div class="meta">
          <span class="category">{categoryNames[entry.data.category]}</span>
          <span class="rating">{renderStars(entry.data.rating)} ({entry.data.rating}/5)</span>
          <span class="date">{entry.data.publishedAt.toISOString().split('T')[0]}</span>
        </div>
        {entry.data.recommendFor && (
          <div class="recommend-section">
            <h4>おすすめする人</h4>
            <div set:html={marked(entry.data.recommendFor)} />
          </div>
        )}
        {entry.data.notRecommendFor && (
          <div class="not-recommend-section">
            <h4>おすすめしない人</h4>
            <div set:html={marked(entry.data.notRecommendFor)} />
          </div>
        )}
      </article>
    ))}
  </div>

  {currentEntries.length === 0 && (
    <div class="no-reviews">
      <p>レビューがまだありません。</p>
    </div>
  )}

  {totalPages > 1 && (
    <div class="pagination">
      {currentPage > 1 && (
        <a href={`/review?page=${currentPage - 1}`}>← 前のページ</a>
      )}
      
      {Array.from({ length: totalPages }, (_, i) => i + 1).map(page => (
        page === currentPage ? (
          <span class="current">{page}</span>
        ) : (
          <a href={`/review?page=${page}`}>{page}</a>
        )
      ))}
      
      {currentPage < totalPages && (
        <a href={`/review?page=${currentPage + 1}`}>次のページ →</a>
      )}
    </div>
  )}
</Layout>
