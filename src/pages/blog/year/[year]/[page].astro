---
import Layout from '../../../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import '../../../../styles/blog.css';
import { getPaginationItems } from '../../../../utils/pagination';

export async function getStaticPaths() {
  const itemsPerPage = 20;
  const blogEntries = await getCollection('blog');
  const yearsSet = new Set(blogEntries.map(entry => entry.data.publishedAt.getFullYear()));
  
  const paths = [];
  
  for (const year of yearsSet) {
    const filteredEntries = blogEntries.filter(entry => entry.data.publishedAt.getFullYear() === year);
    const totalPages = Math.ceil(filteredEntries.length / itemsPerPage);
    
    // Generate pages 2 and above (page 1 is handled by [year].astro)
    for (let page = 2; page <= totalPages; page++) {
      paths.push({
        params: { year: String(year), page: String(page) }
      });
    }
  }
  
  return paths;
}

const { year, page } = Astro.params;
const currentYear = parseInt(year);
const currentPage = parseInt(page);
const itemsPerPage = 20;

const blogEntries = await getCollection('blog');
const filteredEntries = blogEntries
  .filter(entry => entry.data.publishedAt.getFullYear() === currentYear)
  .sort((a, b) => b.data.publishedAt.getTime() - a.data.publishedAt.getTime());

const totalPages = Math.ceil(filteredEntries.length / itemsPerPage);
const startIndex = (currentPage - 1) * itemsPerPage;
const endIndex = startIndex + itemsPerPage;
const currentEntries = filteredEntries.slice(startIndex, endIndex);

// Sidebar data
const sortedEntries = blogEntries.sort((a, b) => b.data.publishedAt.getTime() - a.data.publishedAt.getTime());
const recentArticles = sortedEntries.slice(0, 10);
const years = [...new Set(blogEntries.map(entry => entry.data.publishedAt.getFullYear()))].sort((a, b) => b - a);

const categoryNames = {
  general: '一般',
  game: 'ゲーム',
  dev: '開発',
  home: '家・インテリア',
  plants: '植物',
  travel: '旅行・グルメ',
  science: '科学・技術'
};

const paginationItems = getPaginationItems({ currentPage, totalPages });
---

<Layout title={`${currentYear}年の記事 - ページ ${currentPage} - ブログ - TRPG研究室`}>
  <nav class="breadcrumb">
    <a href="/">ホーム</a> &gt; 
    <a href="/blog">ブログ</a> &gt; 
    <span class="current">{currentYear}年</span>
  </nav>

  <div class="layout-container">
    <!-- Left Sidebar -->
    <aside class="sidebar">
      <!-- Recent Articles -->
      <section class="sidebar-section">
        <h3>最近の記事</h3>
        <ul class="recent-articles">
          {recentArticles.map(article => (
            <li>
              <a href={`/blog/${article.slug}`}>
                <span class="article-date">{article.data.publishedAt.toISOString().split('T')[0]}</span>
                <span class="article-title">{article.data.title}</span>
              </a>
            </li>
          ))}
        </ul>
      </section>

      <!-- Categories -->
      <section class="sidebar-section">
        <h3>カテゴリ一覧</h3>
        <ul class="category-list">
          {Object.entries(categoryNames).map(([slug, name]) => (
            <li>
              <a href={`/blog/${slug}`}>{name}</a>
            </li>
          ))}
        </ul>
      </section>

      <!-- Year Archive -->
      <section class="sidebar-section">
        <h3>年別アーカイブ</h3>
        <ul class="year-list">
          {years.map(y => (
            <li>
              <a href={`/blog/year/${y}`} class={y === currentYear ? 'active' : ''}>{y}年</a>
            </li>
          ))}
        </ul>
      </section>
    </aside>

    <!-- Main Content -->
    <div class="main-content">
      <h1>ブログ - {currentYear}年</h1>
      <p>{currentYear}年の記事一覧です。</p>

      <div class="categories">
        <h3>カテゴリで絞り込み</h3>
        <ul>
          <li><a href="/blog">すべて</a></li>
          <li><a href="/blog/general">一般</a></li>
          <li><a href="/blog/game">ゲーム</a></li>
          <li><a href="/blog/dev">開発</a></li>
          <li><a href="/blog/home">家・インテリア</a></li>
          <li><a href="/blog/plants">植物</a></li>
          <li><a href="/blog/travel">旅行・グルメ</a></li>
          <li><a href="/blog/science">科学・技術</a></li>
        </ul>
      </div>

      <div class="blog-list">
        {currentEntries.map(entry => (
          <article class="blog-item">
            <h2>
              <a href={`/blog/${entry.slug}`}>{entry.data.title}</a>
            </h2>
            <div class="meta">
              <span class="category">{categoryNames[entry.data.category]}</span>
              <span class="date">{entry.data.publishedAt.toISOString().split('T')[0]}</span>
            </div>
            <div class="excerpt">
              {entry.body.slice(0, 500)}...
            </div>
            {entry.data.tags.length > 0 && (
              <div class="tags">
                {entry.data.tags.map(tag => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            )}
          </article>
        ))}
      </div>

      {currentEntries.length === 0 && (
        <div class="no-posts">
          <p>この年にはまだ記事がありません。</p>
        </div>
      )}

      {totalPages > 1 && (
        <div class="pagination">
          {currentPage > 1 && (
            currentPage === 2 ? (
              <a href={`/blog/year/${year}`}>← 前のページ</a>
            ) : (
              <a href={`/blog/year/${year}/${currentPage - 1}`}>← 前のページ</a>
            )
          )}
          
          {paginationItems.map(item =>
            item === 'ellipsis' ? (
              <span class="ellipsis">...</span>
            ) : item === currentPage ? (
              <span class="current">{item}</span>
            ) : item === 1 ? (
              <a href={`/blog/year/${year}`}>{item}</a>
            ) : (
              <a href={`/blog/year/${year}/${item}`}>{item}</a>
            )
          )}
          
          {currentPage < totalPages && (
            <a href={`/blog/year/${year}/${currentPage + 1}`}>次のページ →</a>
          )}
        </div>
      )}
    </div>
  </div>
</Layout>
