---
import "@fontsource/roboto";
import "../styles/variables.css";
import "../styles/main.css";
import Navbar from "../components/Navbar.astro";
import { siteConfig } from "../config";

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "TRPG研究室 - テーブルトークRPGの情報サイト" } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <script is:inline>
      if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        document.documentElement.classList.add('dark')
      } else {
        document.documentElement.classList.remove('dark')
      }
    </script>
  </head>
  <body class="bg-[var(--page-bg)] text-90 transition-colors duration-300">
    <div class="min-h-screen flex flex-col">
      <Navbar />
      
      <main class="flex-1 max-w-6xl mx-auto px-4 py-8 w-full">
        <div class="card-base p-8">
          <slot />
        </div>
      </main>
      
      <footer class="bg-[var(--card-bg)] border-t border-[var(--line-divider)] mt-12">
        <div class="max-w-6xl mx-auto px-4 py-8 text-center">
          <div class="flex justify-center gap-6 mb-4">
            <a href="https://scenario.trpg-labo.com/" target="_blank" class="link-underline text-[var(--primary)]">
              TRPGシナリオ作成大全
            </a>
            <a href="https://x.com/kilica" target="_blank" class="link-underline text-[var(--primary)]">
              X.com
            </a>
          </div>
          <p class="text-50">&copy; 2024 TRPG研究室. All rights reserved.</p>
        </div>
      </footer>
    </div>
  </body>
</html>
